 "html": "{% set comp = doc.get_context() %}\r\n{% set customer = frappe.get_doc('Cliente', doc.customer) %}\r\n\r\n<style>\r\n  @page {\r\n    size: A4;\r\n    margin: 1.5cm;\r\n  }\r\n\r\n  @font-face {\r\n    font-family: 'Code128';\r\n    src: url('{{ frappe.utils.get_url() }}/assets/restaurante_app/fonts/code128.ttf') format('truetype');\r\n  }\r\n</style>\r\n\r\n\r\n\r\n<!-- ENCABEZADO EN 2 COLUMNAS -->\r\n<div style=\"display: flex; justify-content: space-between; gap: 15px; align-items: flex-start; margin-bottom: 20px;\">\r\n\r\n  <div style=\"margin-top: 15px; overflow: hidden;\">\r\n\r\n    <!-- COLUMNA 1: EMPRESA -->\r\n    <div style=\"width: 48%; float: left;\">\r\n      {% if doc.company_logo %}\r\n      <img src=\"{{ doc.company_logo }}\" style=\"max-height: 60px; margin-bottom: 5px;\"><br>\r\n      {% endif %}\r\n      <strong>{{ doc.company_name }}</strong><br>\r\n      {{ doc.company_address }}<br>\r\n      Tel: {{ doc.company_phone }}<br>\r\n      Email: {{ doc.company_email }}<br>\r\n      Contribuyente Especial Nro: {{ doc.company_contribuyente or 'N/A' }}<br>\r\n      Obligado a llevar contabilidad: {{ doc.company_contabilidad or 'NO' }}<br>\r\n    </div>\r\n\r\n    <!-- COLUMNA 2: FACTURA + SRI -->\r\n    <div\r\n      style=\"width: 48%; float: right; border: 1px solid #000; padding: 10px; font-size: 10px; background-color: #f3f3f3; text-align: center;\">\r\n      <div><strong>R.U.C.:</strong> {{ doc.company_ruc }}</div>\r\n      <div style=\"font-size: 14px; font-weight: bold;\">FACTURA</div>\r\n      <div><strong>No.:</strong> {{ doc.estab }}-{{ doc.ptoemi }}-{{ doc.secuencial }}</div>\r\n      <div><strong>No. de Autorizaci\u00f3n:</strong></div>\r\n      <div>{{ doc.clave_acceso }}</div>\r\n      <div><strong>Fecha y hora de Autorizaci\u00f3n:</strong></div>\r\n      <div>{{ doc.fecha_autorizacion or '' }}</div>\r\n      <p><strong>Ambiente:</strong>\r\n        {% if doc.ambiente == \"1\" %}PRUEBAS\r\n        {% elif doc.ambiente == \"2\" %}PRODUCCI\u00d3N\r\n        {% else %}DESCONOCIDO\r\n        {% endif %}\r\n      </p>\r\n      <div><strong>Emisi\u00f3n:</strong> NORMAL</div>\r\n      <div><strong>CLAVE DE ACCESO</strong></div>\r\n      <div\r\n        style=\"font-family: 'Code128'; font-size: 28px; text-align: center; white-space: nowrap; overflow: hidden; line-height: 1; margin-top: 10px;\">\r\n        {{ doc.clave_acceso or '' }}\r\n      </div>\r\n      <div style=\"font-size: 9px; margin-top: 4px;\">{{ doc.clave_acceso or '' }}</div>\r\n    </div>\r\n  </div>\r\n\r\n</div>\r\n\r\n<!-- Cliente -->\r\n<table style=\"width: 100%; border-collapse: collapse; font-size: 10px; margin-top: 10px; page-break-inside: avoid;\">\r\n  <tr>\r\n    <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Raz\u00f3n Social / Nombres:</strong> {{ doc.nombre_cliente }}\r\n    </td>\r\n    <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Fecha Emisi\u00f3n:</strong> {{ doc.fecha_emision }}</td>\r\n  </tr>\r\n  <tr>\r\n    <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Identificaci\u00f3n:</strong> {{ doc.identificacion_cliente }}\r\n    </td>\r\n    <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Direcci\u00f3n:</strong> {{ customer.direccion or '' }}</td>\r\n  </tr>\r\n  <tr>\r\n    <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Email:</strong> {{ doc.email }}</td>\r\n    <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Tel\u00e9fono:</strong> {{ customer.telefono }}</td>\r\n  </tr>\r\n</table>\r\n\r\n<!-- Detalle de Productos -->\r\n<table style=\"width: 100%; border-collapse: collapse; font-size: 10px; margin-top: 10px; page-break-inside: avoid;\">\r\n  <thead>\r\n    <tr style=\"background-color: #eaeaea; font-weight: bold;\">\r\n      <th style=\"border: 1px solid #ccc; padding: 5px;\">C\u00f3digo</th>\r\n      <th style=\"border: 1px solid #ccc; padding: 5px;\">Cantidad</th>\r\n      <th style=\"border: 1px solid #ccc; padding: 5px;\">Descripci\u00f3n</th>\r\n      <th style=\"border: 1px solid #ccc; padding: 5px;\">Precio Unitario</th>\r\n      <th style=\"border: 1px solid #ccc; padding: 5px;\">Descuento</th>\r\n      <th style=\"border: 1px solid #ccc; padding: 5px;\">Total</th>\r\n    </tr>\r\n  </thead>\r\n  <tbody>\r\n    {% for items in doc.items %}\r\n    {% set item = frappe.get_doc('Producto', items.product) %}\r\n    <tr>\r\n      <td style=\"border: 1px solid #ccc; padding: 5px;\">{{ items.product }}</td>\r\n      <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{ items.qty }}</td>\r\n      <td style=\"border: 1px solid #ccc; padding: 5px;\">{{ item.nombre }} {{ item.descripcion or '' }}</td>\r\n      <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{ \"%.2f\"|format(items.rate) }}</td>\r\n      <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">0.00</td>\r\n      <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{ \"%.2f\"|format(items.total) }}</td>\r\n    </tr>\r\n    {% endfor %}\r\n  </tbody>\r\n</table>\r\n\r\n<!-- Pagos y Totales -->\r\n<div style=\"margin-top: 15px; overflow: hidden;\">\r\n\r\n  <!-- Pagos -->\r\n  <div style=\"width: 48%; float: left;\">\r\n    <table style=\"width: 100%; border-collapse: collapse; font-size: 10px;\">\r\n      <thead>\r\n        <tr style=\"background-color: #eaeaea; font-weight: bold;\">\r\n          <th style=\"border: 1px solid #ccc; padding: 5px;\">Forma de Pago</th>\r\n          <th style=\"border: 1px solid #ccc; padding: 5px;\">Valor</th>\r\n        </tr>\r\n      </thead>\r\n      <tbody>\r\n        {% for pay in doc.payments %}\r\n        {% set pago = frappe.get_doc('payments', pay.formas_de_pago) %}\r\n        <tr>\r\n          <td style=\"border: 1px solid #ccc; padding: 5px;\">{{ pago.description }}</td>\r\n          <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{ \"%.2f\"|format(doc.total) }}</td>\r\n        </tr>\r\n        {% endfor %}\r\n      </tbody>\r\n    </table>\r\n  </div>\r\n\r\n  <!-- Totales -->\r\n  <div style=\"width: 48%; float: right;\">\r\n    <table style=\"width: 100%; border-collapse: collapse; font-size: 10px;\">\r\n      <tr>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px;\">Subtotal 15%</td>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{ doc.subtotal_15 or '0.00' }}</td>\r\n      </tr>\r\n      <tr>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px;\">Subtotal 0%</td>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{ \"%.2f\"|format(doc.subtotal) or '0.00' }}\r\n        </td>\r\n      </tr>\r\n      <tr>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px;\">Descuento</td>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">0.00</td>\r\n      </tr>\r\n      <tr>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px;\">IVA 15%</td>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\">{{\"%.2f\"|format(doc.iva) }}</td>\r\n      </tr>\r\n      <tr>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px;\"><strong>Valor Total</strong></td>\r\n        <td style=\"border: 1px solid #ccc; padding: 5px; text-align: right;\"><strong>{{\"%.2f\"|format(doc.total)}}</strong>\r\n        </td>\r\n      </tr>\r\n    </table>\r\n  </div>\r\n</div>\r\n\r\n<!-- Pie -->\r\n<!--<div style=\"clear: both; text-align: center; font-size: 9px; color: #666; margin-top: 30px;\">-->\r\n<!--  Este documento es una representaci\u00f3n gr\u00e1fica del Comprobante Electr\u00f3nico autorizado por el SRI<br>-->\r\n<!--  www.sri.gob.ec-->\r\n<!--</div>-->\r\n\r\n</div>",
